<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">
        <ImageView
            android:id="@+id/movie_img"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ri"/>
        <LinearLayout
            android:id="@+id/mid_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/movie_img"
            android:layout_toEndOf="@+id/bookOrBuy_btn">
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1111111111111111"/>
            <TextView
                android:id="@+id/score_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1111111111111111"/>
            <TextView
                android:id="@+id/describe_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1111111111111111"/>
            <TextView
                android:id="@+id/match_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1111111111111111"/>

        </LinearLayout>
        <ImageButton
            android:id="@+id/bookOrBuy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/a73"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

</LinearLayout>